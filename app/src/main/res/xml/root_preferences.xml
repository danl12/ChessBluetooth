<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Игра с компьютером" >

        <SeekBarPreference
            android:max="10"

            app:defaultValue="5"
            app:key="computer_strength"
            app:selectable="false"
            app:showSeekBarValue="true"
            app:title="Сложность" />

        <SeekBarPreference
            android:max="60"
            app:defaultValue="0"
            app:key="computer_time_limit"
            app:selectable="false"
            app:showSeekBarValue="true"
            app:title="Время обдумывания хода" />

    </PreferenceCategory>

</PreferenceScreen>
